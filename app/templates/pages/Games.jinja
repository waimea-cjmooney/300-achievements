{#=====================================================
  Things page
  - List of things passed in as 'things' array
  - Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Flask Demo - All Things

{% endblock %}


{% block content %}

    <h2>Newest Games</h2>


    <article>

        <ul>
            {% for game in games %}

                <li>
                    <a href="/thing/{{ game.id }}">
                        <strong>{{ game.name }}</strong> {{ game.added_by }}
                    </a>
                </li>

            {% else %}

                <p>No games registered yet</p>

            {% endfor %}
        </ul>

    </article>



    

{% endblock %}

