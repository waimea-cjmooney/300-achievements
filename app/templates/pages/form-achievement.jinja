{#=====================================================
Form achievement page
  - Form for adding a new achievement to a game
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Platinum Tracker - Add Acheivement

{% endblock %}


{% block content %}

    <article>

        <header>
            <h2>Add Acheivement</h2>
        </header>

        <form action="/add/achievement/{{ game }}" method="POST">

            <label for="name">Name of the Achievement</label>

            <input
                type="text"
                name="name"
                required
            >


            <label for="description">Description of the achievement</label>

            <textarea
                name="description"
                required
            ></textarea>

            <label for="requirements">Requirement/s <strong>*optional*</strong></label>

            <textarea
                name="requirements"
                placeholder="How to unlock this achievement (If not obvious)"
            ></textarea>

            <label for="location">Location/s <strong>*optional*</strong></label>

            <input
                type="text"
                name="location"
                placeholder=" Where to unlock achievement. (Level, chapter, town, area, etc...)"
            >

            <label for="image">Link to icon <strong>*optional*</strong></label>

            <input
                type="text"
                name="image"
                placeholder="https://..."
            >


            <button>Add</button>

        </form>
    </article>

{% endblock %}

